@{
	// هنا بجيب كل الطلاب مش طالب واحد بيجيب ال list كلها  -->(List<Student>)
}

@model List<Student>
<style>
    h1{
        color: blue;
	}
</style>
@{
    ViewData["Title"] = "Show All Students";

}
<h1 class="text-center">All Students</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <img src=" /images/@item.ImageURL" alt="Student Image" width="100" height="100" />
                </td>
                @* <td>@item.Address</td> *@
                <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
	</tbody>
