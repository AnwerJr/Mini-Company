<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Showroom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">

    <div class="container-fluid vh-100">
        <div class="row h-100">

            <!-- 🔵 Sidebar (مشترك بين كل الصفحات) -->
            <div class="col-auto bg-dark text-white p-4 d-flex flex-column justify-content-between shadow-lg"
                 style="width: 220px; position: fixed; left: 0; top: 0; bottom: 0; border-right: 2px solid #0d6efd;">

                <div>
                    <h3 class="text-center mb-4 fw-bold text-info">🚗 Showroom</h3>

                    <ul class="nav flex-column">
                        <li class="nav-item mb-3">
                            <a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>

                        <li class="nav-item mb-3">
                            <a class="nav-link text-white dropdown-toggle fw-semibold" href="#"
                               data-bs-toggle="collapse" data-bs-target="#vehicleMenu">
                                🚘 Vehicle
                            </a>

                            <ul class="collapse list-unstyled ps-3" id="vehicleMenu">
                                <li><a class="nav-link text-white" asp-controller="Vehicles" asp-action="Cars">🚗 Cars</a></li>
                                <li><a class="nav-link text-white" asp-controller="Vehicles" asp-action="Bikes">🏍 Motorcycles</a></li>
                            </ul>
                        </li>

                        <li class="nav-item mb-3">
                            <a class="nav-link text-white dropdown-toggle fw-semibold" href="#"
                               data-bs-toggle="collapse" data-bs-target="#accessoriesMenu">
                                🛡 Accessories
                            </a>
                            <ul class="collapse list-unstyled ps-3" id="accessoriesMenu">
                                <li><a class="nav-link text-white" asp-controller="Accessories" asp-action="Helmets">🪖 Helmets</a></li>
                            </ul>
                        </li>

                        <li class="nav-item mb-3">
                            <a class="nav-link text-white fw-semibold" asp-controller="Contact" asp-action="Index">📞 Contact Us</a>
                        </li>
                    </ul>
                </div>

                <div class="text-center small text-secondary">
                    <p>© 2025 Showroom</p>
                </div>
            </div>

            <!-- 🔵 مكان ظهور الصفحات -->
            <div class="col" style="margin-left: 220px;">
                <div class="container pt-4">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
