@model VehicleShowroom.Models.Moto

@{
    
    Layout = "_Layout";


    ViewData["Title"] = $"{Model.Brand} {Model.Name} Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                @{
                    //image
                }
                <img src="~/images/@Model.ImageUrl"
                     class="card-img-top"
                     style="height:400px; object-fit:cover;"
                     alt="@Model.Name" />



                <div class="card-body text-center">
                    <h2 class="fw-bold text-primary mb-3"> @Model.Name</h2>
                    <p class="text-muted mb-4">Model Year: @Model.Model</p>

                    <div class="row mb-3">
                        <div class="col-md-6 text-start">
                            @* <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                            <p><strong>Doors:</strong> @Model.NumberOfDoors</p> *@
                        </div>
                        <div class="col-md-6 text-start">
                            @* <p><strong>Has ABS:</strong> @(Model.HasABS ? "✅ Yes" : "❌ No")</p> *@
                            <p><strong>Price:</strong> <span class="text-success fw-bold">@Model.Price.ToString("C0")</span></p>
                        </div>
                    </div>

                    <a asp-controller="Vehicles" asp-action="Bikes" class="btn btn-outline-secondary px-4">
                        ⬅ Back to Motorcycles
                    </a>
                    <a href="#" class="btn btn-primary px-4">
                        🛒 Add to Cart
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
