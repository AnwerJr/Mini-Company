@model IEnumerable<VehicleShowroom.Models.Car>

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Any()
        ? $"{Model.First().Brand} Cars"
        : "No Cars Found";
}


@if (!Model.Any())
{
    <div class="container mt-5 text-center">
        <h2 class="text-danger fw-bold">No cars available for this brand </h2>
        <a asp-controller="Vehicles" asp-action="Cars" class="btn btn-primary mt-3">⬅ Back to brands</a>
    </div>

    return;
}

<div class="container mt-5">
    <h1 class="text-center mb-5">🚗 @Model.First().Brand Cars</h1>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">

                    <img src="@Url.Content("~/images/" + System.IO.Path.GetFileName(car.ImageUrl))"
                         class="card-img-top" style="height:200px; object-fit:cover;" />

                    <div class="card-body">
                        <h5>@car.Name - @car.Model</h5>
                        <p class="text-muted">@car.FuelType | Doors: @car.NumberOfDoors</p>
                        <p class="fw-bold text-success">@car.Price.ToString("C0")</p>

                        <a asp-controller="Vehicles" asp-action="CarDetails"
                           asp-route-id="@car.Id"
                           class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <a asp-controller="Vehicles" asp-action="Cars" class="btn btn-secondary mt-4">⬅ Back to Brands</a>
</div>
