@{
    Layout = "_Layout";
    ViewData["Title"] = "Vehicle";
}

<div class="container text-center mt-5">
    <h1 class="mb-3"> Vehicle Showroom</h1>
    <h4 class="text-muted mb-5">Choose your vehicle below</h4>

    <div class="row justify-content-center">
        <!-- السيارة -->
        <div class="col-md-4">
            <a asp-controller="Vehicles" asp-action="CarDetails" style="text-decoration: none; color: inherit;">
                <div class="card shadow-sm border-0">
                    <img src="~/images/bmw.ss.jpg" class="card-img-top rounded-3" style="height: 350px; object-fit: cover;" alt="Car" />
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Cars</h5>
                        <p class="card-text text-muted">Explore our latest car models</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- الموتوسيكل -->
        <div class="col-md-4">
            <a asp-controller="Vehicles" asp-action="BikeDetails" style="text-decoration: none; color: inherit;">
                <div class="card shadow-sm border-0">
                    <img src="~/images/moto.png" class="card-img-top rounded-3" style="height: 350px; object-fit: cover;" alt="Motorbike" />
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Motorcycles</h5>
                        <p class="card-text text-muted">Discover powerful and stylish bikes</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
