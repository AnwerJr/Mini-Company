@{
    ViewData["Title"] = "Home Page";
}

<!-- ✅ التصميم المعدل -->
<div class="container-fluid vh-100 bg-light">
    <div class="row h-100">

        <!-- ✅ Sidebar -->
        <div class="col-auto bg-dark text-white p-4 d-flex flex-column justify-content-between shadow-lg"
             style="width: 220px; position: fixed; left: 0; top: 0; bottom: 0; border-right: 2px solid #0d6efd;">

            <div>
                <h3 class="text-center mb-4 fw-bold text-info">🚗 Showroom</h3>
                <ul class="nav flex-column">
                    <li class="nav-item mb-3">
                        <a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Index">
                            🏠 Home
                        </a>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link text-white dropdown-toggle fw-semibold" href="#" data-bs-toggle="collapse" data-bs-target="#vehicleMenu">
                            🚘 Vehicle
                        </a>
                        <ul class="collapse list-unstyled ps-3" id="vehicleMenu">
                            <li><a class="nav-link text-white" asp-controller="Vehicles" asp-action="Cars">🚗 Cars</a></li>
                            <li><a class="nav-link text-white" asp-controller="Vehicles" asp-action="Bikes">🏍️ Motorcycles</a></li>
                        </ul>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link text-white dropdown-toggle fw-semibold" href="#" data-bs-toggle="collapse" data-bs-target="#accessoriesMenu">
                            🛡️ Accessories
                        </a>
                        <ul class="collapse list-unstyled ps-3" id="accessoriesMenu">
                            <li>
                                <a class="nav-link text-white" asp-controller="Accessories" asp-action="Helmets">
                                    🪖 Helmets
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link text-white fw-semibold" asp-controller="Contact" asp-action="Index">📞 Contact Us</a>
                    </li>
                </ul>
            </div>

            <div class="text-center small text-secondary">
                <p>© 2025 Showroom</p>
            </div>
        </div>

        <!-- ✅ Main Content -->
        <div class="col d-flex flex-column align-items-center justify-content-center text-center" style="margin-left: 220px;">

            <!-- ✅ Slider -->
            <div id="vehicleSlider" class="carousel slide shadow-lg rounded-4 overflow-hidden mb-4"
                 data-bs-ride="carousel"
                 style="width: 80%; max-width: 700px; border: 3px solid #0d6efd;">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/BMW2.png" class="d-block w-100" alt="BMW Car" style="height:400px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/bmw.ss.jpg" class="d-block w-100" alt="BMW Car" style="height:400px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/motor.jpg" class="d-block w-100" alt="Motorcycle" style="height:400px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/BMW3.png" class="d-block w-100" alt="BMW Car" style="height:400px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/moto.png" class="d-block w-100" alt="Motorcycle" style="height:400px; object-fit:cover;">
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#vehicleSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#vehicleSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                </button>
            </div>

            <!-- ✅ Text Section -->
            <div class="mt-3">
                <h2 class="text-primary fw-bold">Welcome to Our Vehicle Showroom</h2>
                <p class="text-muted fs-5">
                    Discover the latest cars and motorbikes with exclusive details and offers.<br />
                    Use the sidebar to explore our collection.
                </p>
            </div>
        </div>
    </div>
</div>
