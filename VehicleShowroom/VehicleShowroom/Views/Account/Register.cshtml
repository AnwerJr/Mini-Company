@model VehicleShowroom.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 420px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-primary">Create Account</h3>

        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label fw-semibold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your User name" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter a password" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center mt-3">@ViewBag.Error</p>
            }
        </form>

        <hr />
        <p class="text-center mb-0">
            Already have an account?
            <a href="/Account/Login" class="text-decoration-none">Login here</a>
        </p>
    </div>
</div>
